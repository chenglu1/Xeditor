{
  "name": "xeditor-monorepo",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "predev": "pnpm run build:editor",
    "dev": "pnpm --filter web dev",
    "prebuild": "pnpm run build:editor",
    "build": "pnpm --filter web build",
    "preview": "pnpm --filter web preview",
    "build:editor": "pnpm --filter @xeditor/editor run build",
    "publish:editor": "pnpm --filter @xeditor/editor publish --access public --no-git-checks",
    "test:bundle": "pnpm run build:editor && node scripts/test-bundle.mjs"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

